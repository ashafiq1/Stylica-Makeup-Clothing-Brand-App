<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.stylica.makeupclothing">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="Stylica"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.MaterialComponents.Light.DarkActionBar">

        <!-- Login Activity - Entry Point -->
        <activity
            android:name="ui.LoginActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Signup Activity -->
        <activity
            android:name="ui.SignupActivity"
            android:exported="false" />

        <!-- Main Activity -->
        <activity
            android:name="ui.MainActivity"
            android:exported="false" />

        <!-- Admin Dashboard Activity -->
        <activity
            android:name="ui.AdminDashboardActivity"
            android:exported="false" />

        <!-- Moderator Activity -->
        <activity
            android:name="ui.ModeratorActivity"
            android:exported="false" />

        <!-- Product Detail Activity -->
        <activity
            android:name="ui.ProductDetailActivity"
            android:exported="false" />

        <!-- Checkout Activity -->
        <activity
            android:name="ui.CheckoutActivity"
            android:exported="false" />

    </application>

</manifest>
